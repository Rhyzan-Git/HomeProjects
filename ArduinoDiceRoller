Roll random number

Display random number


//Keypad header file
#include <Keypad.h>

//Keypad reserved bytes
const byte ROWS = 4; 
const byte COLS = 4; 

//Keypad characters (In grid form)
char hexaKeys[ROWS][COLS] = {
  {'1', '2', '3', 'A'},
  {'4', '5', '6', 'B'},
  {'7', '8', '9', 'C'},
  {'*', '0', '#', 'D'}
};

//Physical pins to Arduino
byte rowPins[ROWS] = {9, 8, 7, 6}; 
byte colPins[COLS] = {5, 4, 3, 2}; 

//Used to read key press - char customKey = customKeypad.getKey();
Keypad customKeypad = Keypad(makeKeymap(hexaKeys), rowPins, colPins, ROWS, COLS);

void setup(){
  Serial.begin(9600);
}
  
void loop(){
  char customKey = customKeypad.getKey();
  
	if (customKey = '*'){
		Serial.println("Screen Cleared!");
	}
	
    if (customKey = '#'){
		Serial.println("Dice Rolled!");
	}
	
    if (customKey = 'A'){
		Serial.println("Preset 1 Selected");
	}
    
	if (customKey = 'B'){
		Serial.println("Preset 2 Selected");
	}
    if (customKey = 'C'){
		Serial.println("Preset 3 Selected");
	}
	
    if (customKey = 'D'){
		Serial.println("Dice number recorded, select dice faces");
	}
  
}
